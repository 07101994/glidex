  <ItemGroup>
    <TransformFile Include="Transforms\Metadata.xml" />
    <TransformFile Include="Transforms\EnumFields.xml" />
    <TransformFile Include="Transforms\EnumMethods.xml" />
  </ItemGroup>
  <ItemGroup>
    <EmbeddedJar Include="Jars\glide-full-4.7.0.jar">
      <Url>https://github.com/bumptech/glide/releases/download/v4.7.0/glide-full-4.7.0.jar</Url>
    </EmbeddedJar>
  </ItemGroup>
  <Import Project="$(MSBuildExtensionsPath)\Xamarin\Android\Xamarin.Android.Bindings.targets" />
  <Import Project="$(MSBuildExtensionsPath)\Xamarin\Android\Xamarin.Android.Common.targets" />
  <UsingTask TaskName="DownloadFile" TaskFactory="CodeTaskFactory" AssemblyFile="$(MSBuildToolsPath)\Microsoft.Build.Tasks.v12.0.dll">
    <ParameterGroup>
      <Url ParameterType="System.String" Required="true" />
      <File ParameterType="System.String" Required="true" />
    </ParameterGroup>
    <Task>
      <Reference Include="System.Net.Http" />
      <Using Namespace="Microsoft.Build.Utilities" />
      <Code Type="Fragment" Language="cs"><![CDATA[
          Log.LogMessage("Downloading {0} to {1}...", Url, File);
          using (var client = new System.Net.Http.HttpClient()) {
            var task = client.GetStreamAsync(Url);
            task.Wait();
            System.IO.Directory.CreateDirectory(System.IO.Path.GetDirectoryName(File));
            task.Result.CopyTo(System.IO.File.Create(File));
          }
        ]]></Code>
    </Task>
  </UsingTask>
  <PropertyGroup>
    <_Intermediate>$(IntermediateOutputPath)glidex\</_Intermediate>
    <_ProguardStamp>$(_Intermediate)glidex.pro.stamp</_ProguardStamp>
  </PropertyGroup>
  <Target Name="Download" Inputs="$(MSBuildThisFile)" Outputs="@(EmbeddedJar->'$(_Intermediate)%(Identity)')">
    <DownloadFile Url="%(EmbeddedJar.Url)" File="@(EmbeddedJar->'$(_Intermediate)%(Identity)')" />
    <DownloadFile Url="https://dl.google.com/dl/android/maven2/com/android/support/support-v4/25.4.0/support-v4-25.4.0.aar" File="$(_Intermediate)support-v4.aar" />
    <ItemGroup>
      <FileWrites Include="@(EmbeddedJar->'$(_Intermediate)%(Identity)')" />
    </ItemGroup>
  </Target>
  <Target Name="Proguard" Inputs="@(EmbeddedJar->'$(_Intermediate)%(Identity)')" Outputs="$(_ProguardStamp)" DependsOnTargets="Download;AndroidPrepareForBuild">
    <Exec Command="&quot;$(JavaToolPath)\java&quot; -jar &quot;$(ProguardJarPath)&quot; -injars &quot;@(EmbeddedJar->'$(_Intermediate)%(Identity)')&quot; -outjars &quot;%(EmbeddedJar.Identity)&quot; -libraryjars &quot;'$(JavaPlatformJarPath)';'$(_Intermediate)support-v4.aar'&quot; -keep class com.bumptech.glide.** { public *; }" />
    <Touch Files="$(_ProguardStamp)" AlwaysCreate="True" />
    <ItemGroup>
      <FileWrites Include="$(_ProguardStamp)" />
    </ItemGroup>
  </Target>
  <Target Name="BeforeBuild" DependsOnTargets="Proguard" />
</Project>